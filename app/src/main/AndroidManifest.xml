<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigyan.converter" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.bigyan.converter.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CurrencyConverter"
            android:label="@string/title_activity_currency_converter" >
        </activity>
        <activity
            android:name=".WeightConverter"
            android:label="@string/title_activity_weight_converter" >
        </activity>
        <activity
            android:name=".AreaConverter"
            android:label="@string/title_activity_area_converter" >
        </activity>
        <activity
            android:name=".TemperatureConverter"
            android:label="@string/title_activity_temperature_converter" >
        </activity>
        <activity
            android:name=".DistanceConverter"
            android:label="@string/title_activity_distance_converter" >
        </activity>
    </application>

</manifest>
